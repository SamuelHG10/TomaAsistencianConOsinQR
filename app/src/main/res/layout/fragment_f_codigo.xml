<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdechilo"
    tools:context=".Fragments.Codigo">


    <TextView
        android:id="@+id/txt_Fondo"
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="90dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/img_QR"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="180dp"
        android:src="@mipmap/pruebaqr" />

    <Button
        android:id="@+id/btn_Escanear"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="115dp"
        android:text="Registrar Entrada" />

    <ImageView
        android:id="@+id/img_Persona"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="160dp"
        android:src="@mipmap/usuario" />

    <TextView
        android:id="@+id/txt_NombrePersona"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="Nombre de la persona"
        android:layout_marginTop="220dp"
        android:layout_marginStart="140dp"/>

    <TextView
        android:id="@+id/txtNumeroControl"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:hint="Numero de Control"
        android:layout_marginTop="240dp"
        android:layout_marginStart="150dp"/>

    <TextView
        android:id="@+id/txt_Estatus"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:hint="Estatus"
        android:layout_marginTop="480dp"
        android:layout_marginStart="190dp"/>


</FrameLayout>